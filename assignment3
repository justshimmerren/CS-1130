<body>
  <div class="maincard">
    <h1>Assignment 3: Factorial, Sum, and Average</h1>
    <h2>Enter an Integer (n):</h2>
    <input type="number" id="numberInput" placeholder="Enter a number n" />
    <button onclick="calculateValues()">Calculate</button>
    
    <div class="result" id="result"></div>

    <a href="index.html">Back to Homepage</a>
  </div>

  <script>
    function calculateValues() {
      const n = parseInt(document.getElementById('numberInput').value);
      if (isNaN(n) || n <= 0) {
        document.getElementById('result').innerText = 'Please enter a valid positive integer.';
        return;
      }

      // 1. Calculate factorial using a while loop
      let factorial = 1, i = n;
      while (i > 0) {
        factorial *= i;
        i--;
      }

      // 2. Calculate sum using a do-while loop
      let sum = 0, j = 1;
      do {
        sum += j;
        j++;
      } while (j <= n);

      // 3. Calculate average using a for loop
      let average = 0;
      for (let k = 1; k <= n; k++) {
        average += k;
      }
      average /= n;

      // Display results
      document.getElementById('result').innerHTML = `
        <p><strong>Factorial of ${n}:</strong> ${factorial.toLocaleString()}</p>
        <p><strong>Sum of the first ${n} numbers:</strong> ${sum.toLocaleString()}</p>
        <p><strong>Average of the first ${n} numbers:</strong> ${average.toFixed(2)}</p>
      `;
    }
  </script>
